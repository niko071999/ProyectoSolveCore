@model Accion

<form id="FormFilter" asp-action="@Model.accion" method="post">
    <div class="row fw-bold">
        <label class="form-label">Tipos</label>
        <div class="col col-12">
            <select id="inputFecha" class="form-select" name="OpcionFecha" asp-items="ViewBag.Fechas">
                <option value="-1">Ningun filtro de fecha</option>
            </select>
        </div>
        <div class="col col-12">
            <label for="inputSolicitado" class="form-label">Solicitado por</label>
            <select id="inputSolicitado" class="form-select" name="IdSolicitado" asp-items="ViewBag.IdSolicitado">
                <option value="-1">Todos los usuarios</option>
            </select>
        </div>
        <div class="col col-12">
            <label for="inputEstado" class="form-label">Estado</label>
            <select id="inputEstado" class="form-select" name="Estado" asp-items="ViewBag.Estado">
                <option value="-1">Todos los estados</option>
            </select>
        </div>
        <div class="col col-12">
            <label for="inputVehiculo" class="form-label">Vehículo</label>
            <select id="inputVehiculo" class="form-select" name="Vehiculo" asp-items="ViewBag.Vehiculo">
                <option value="">Todos los vehículos</option>
            </select>
        </div>
        <div class="col col-12">
            <label for="inputDestino" class="form-label">Destino</label>
            <select id="inputDestino" class="form-select" name="Destino" asp-items="ViewBag.Destino">
                <option value="">Todos los destinos</option>
            </select>
        </div>
        <div class="col col-12">
            <label for="inputMotivo" class="form-label">Motivo</label>
            <input id="inputMotivo" class="form-control" name="Motivo" value="@ViewBag.Motivo"/>
        </div>
        <div class="col col-6 d-grid gap-2 mt-2">
            <button type="submit" class="btn btn-primary">Filtrar solicitudes</button>
        </div>
        <div class="col col-6 d-grid gap-2 mt-2">
            <a role="button" class="btn btn-secondary" asp-action="@Model.accion">Restablecer</a>
        </div>
    </div>
</form>