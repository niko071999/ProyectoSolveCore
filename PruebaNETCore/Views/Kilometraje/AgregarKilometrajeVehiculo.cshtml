@model Kilometraje
@{
    ViewBag.Title = "Agregar kilometraje al vehículo";
}
<partial name="_NavMenu" />
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Agregar kilometraje al vehículo</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Agenda">Agenda general</a></li>
                <li class="breadcrumb-item"><a asp-action="VisualizarHistorialKm">Visualizar ficha mantenciones</a></li>
                <li class="breadcrumb-item active">Agregar kilometraje al vehículo</li>
            </ol>
            <form id="form_AgregarBitacora" asp-action="AgregarKilometrajeVehiculo" method="post">
                <div class="card">
                    <div class="card-body row fw-bold">
                        <div class="col col-lg-6">
                            <div class="row g-2">
                                <input type="hidden" asp-for="Id" />
                                <div class="col col-md-4 col-sm-12">
                                    <label for="IdVehiculo" class="form-label">Vehículo</label>
                                    <select class="form-select" asp-for="IdVehiculo"
                                            asp-items="ViewBag.IdVehiculo">
                                    </select>
                                </div>
                                <div class="col col-md-4 col-sm-12">
                                    <label for="KilometrajeInicial" class="form-label">Kilometraje inicial</label>
                                    <input type="number" class="form-control" asp-for="KilometrajeInicial"
                                           value="@Model.KilometrajeInicial">
                                </div>
                                <div class="col col-md-4 col-sm-12">
                                    <label for="KilometrajeFinal" class="form-label">Kilometraje final</label>
                                    <input type="number" class="form-control" asp-for="KilometrajeFinal"
                                           value="@Model.KilometrajeFinal">
                                </div>
                                <div class="col col-sm-12">
                                    <button type="submit" class="btn btn-primary">Agregar nuevo kilometraje</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>
</div>
@section CSS{
    <link href="~/lib/select-searcheable/select2.min.css" rel="stylesheet" />
}
    @section Scripts{
    <script src="~/lib/select-searcheable/select2.min.js"></script>
    <script src="~/js/agregarkilometraje.js"></script>
}